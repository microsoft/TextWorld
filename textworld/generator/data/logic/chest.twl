# A type of container that is fixed in place and lockable.
type chest : t, container, fixed_in_place, lockable {
    predicates {
        reachable_contents(chest) = reachable(chest) & open(chest);
    }

    inform7 {
        type {
            kind :: "chest-like";
        }
    }
}

